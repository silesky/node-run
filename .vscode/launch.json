  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Node Task Runner",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/cmd/node-task-runner",
      "args": ["--cwd=${input:cwd}", "--debug"],
      "env": {}
    }
  ],
  "inputs": [
    {
      "id": "cwd",
      "type": "promptString",
      "description": "Enter the value for --cwd",
      "default": "~/projects/analytics-next"
    }
  ]
}
